        <!-- sidebar -->
        <aside id="sidebar">

            <div id="buscador" class="bloque">
                <h3>Buscar</h3>
                <form action="/search" method="POST">
                    <input type="text" name="busqueda" maxlength="25" pattern="^[\w\s]{1,25}$" required />
                    <input type="submit" value="Buscar" disabled />
                </form>
            </div>

            <% if (login) { %>
                
                <div id="usuario-logueado" class="bloque">
                    <% if (userLogged) { %>
                        <h3>Bienvenido, <%= userLogged.nombre %> <%= userLogged.apellidos %></h3>
                    <% } %>
                    <a href="/create-entries" class="boton boton-verde">Crear entradas</a>
                    <a href="/create-category" class="boton">Crear categorias</a>
                    <a href="/profile" class="boton boton-naranja">Mis datos</a>
                    <a href="/logout" class="boton boton-rojo">Cerrar Sesion</a>
                </div>
            
            <% } else { %>
                
                <div id="login" class="bloque">
                    <h3>Identificate</h3>

                    <% if (errorsLogin && errorsLogin.general) { %>
                        <div class="alerta alerta-error"><%= errorsLogin.general %></div>
                    <% } %>

                    <form action="/login" method="POST">

                        <label for="email-login">Email</label>
                        <input type="email" name="email" id="email-login" required />
                        <% if (errorsLogin && errorsLogin.email ) { %>
                            <div class="alerta alerta-error"><%= errorsLogin.email %></div>
                        <% } %>
                        
                        <label for="password-login">Password</label>
                        <input type="password" name="password" required minlength="8" />
                        <% if (errorsLogin && errorsLogin.password ) { %>
                            <div class="alerta alerta-error"><%= errorsLogin.password %></div>
                        <% } %>

                        <input type="submit" value="Entrar" disabled />
                    </form>
                </div>
            
                <div id="register" class="bloque">
                    
                    <h3>Registrate</h3>

                    <!-- registro exitoso -->
                    <% if (register) { %>
                        <div class="alerta alerta-exito">Registro de usuario completado</div>
                    <% } %>
                    
                    <% if (errorsRegister && errorsRegister.general) { %>
                        <div class="alerta alerta-error"><%= errorsRegister.general %></div>
                    <% } %>

                    <form action="/register" method="POST">

                        <label for="name">Nombre</label>
                        <input type="text" name="name" id="name" minlength="2" maxlength="25" required pattern="^[a-zA-Z]{1,25}$" />
                        <% if (errorsRegister && errorsRegister.name) { %>
                            <div class="alerta alerta-error"><%= errorsRegister.name %></div>
                        <% } %>
        

                        <label for="surname">Apellidos</label>
                        <input type="text" name="surname" id="surname" maxlength="25" required pattern="^[a-zA-Z]{1,25}$"  />
                        <% if (errorsRegister && errorsRegister.surname) { %>
                            <div class="alerta alerta-error"><%= errorsRegister.surname %></div>
                        <% } %>

                        <label for="email-register">Email</label>
                        <input type="email" name="email" id="email-register" required />
                        <% if (errorsRegister && errorsRegister.email) { %>
                            <div class="alerta alerta-error"><%= errorsRegister.email %></div>
                        <% } %>

                        <label for="password-register">Password</label>
                        <input type="password" name="password" id="password-register" required minlength="8" />
                        <% if (errorsRegister && errorsRegister.password) { %>
                            <div class="alerta alerta-error"><%= errorsRegister.password %></div>
                        <% } %>
                        
                        <input type="submit" value="Registrar" disabled />
                    </form>
                </div>
            <% } %> 

        </aside>
        <!-- index validator -->
        <script src="js/index-validator.js"></script>