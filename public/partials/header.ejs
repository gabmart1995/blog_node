                </li>
                <% if ( categories ) { %>
                    <% categories.forEach(( category ) => { %>
                        <li>
                            <a href="/category?id=<%= category.id %>"><%= category.nombre  %></a>
                        </li>
                    <% }) %>
                <% } %>
                <li>
                    <a href="#" id="about">Sobre mi</a>
                </li>
                <li>
                    <a href="#" id="contact">Contacto</a>
                </li>
            </ul>    
        </nav>
    </header>
